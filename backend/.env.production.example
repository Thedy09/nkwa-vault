# Configuration de production pour Nkwa Vault
# Copiez ce fichier vers .env.production et configurez les valeurs

# Environnement
NODE_ENV=production

# Serveur
PORT=4000
HOST=0.0.0.0

# Base de données MongoDB (Production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nkwa-vault-prod?retryWrites=true&w=majority

# JWT et sécurité
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production

# CORS et URLs
FRONTEND_URL=https://nkwa.africa
BACKEND_URL=https://api.nkwa.africa
ALLOWED_ORIGINS=https://nkwa.africa,https://www.nkwa.africa,https://nkwa-vault.vercel.app

# Hedera Hashgraph (Production)
HEDERA_OPERATOR_ID=0.0.123456
HEDERA_OPERATOR_KEY=302e020100300506032b657004220420...
HEDERA_NETWORK=mainnet
HEDERA_ACCOUNT_ID=0.0.123456

# IPFS (Production - Pinata)
IPFS_API_URL=https://api.pinata.cloud
IPFS_API_KEY=your-pinata-api-key
IPFS_API_SECRET=your-pinata-api-secret
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# Cloudinary (Production)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_FOLDER=nkwa-vault-prod

# Email (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@nkwa.africa

# Monitoring et logs
LOG_LEVEL=info
LOG_FILE=logs/nkwa-vault.log
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Cache (Redis - optionnel)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# CDN et assets
CDN_URL=https://cdn.nkwa.africa
ASSETS_URL=https://assets.nkwa.africa

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Notifications
FCM_SERVER_KEY=your-firebase-server-key
PUSH_NOTIFICATIONS=true

# Backup et sauvegarde
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=nkwa-vault-backups

# Sécurité avancée
ENCRYPTION_KEY=your-32-character-encryption-key
API_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=10
AUTH_RATE_LIMIT=5

# Features flags
ENABLE_REGISTRATION=true
ENABLE_UPLOADS=true
ENABLE_COMMENTS=true
ENABLE_LIKES=true
ENABLE_SHARING=true
ENABLE_ANALYTICS=true

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site en maintenance, veuillez réessayer plus tard
