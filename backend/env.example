# Configuration de la base de données PostgreSQL
DATABASE_URL="postgresql://nkwa_user:nkwa_secure_2024@localhost:5432/nkwa_vault?schema=public"

# Configuration Redis
REDIS_URL="redis://localhost:6379"
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# Configuration JWT
JWT_SECRET="nkwa_jwt_secret_2024_very_secure_key_here"
JWT_EXPIRES_IN=7d

# Configuration API
PORT=4000
NODE_ENV=development

# Configuration Frontend
FRONTEND_URL=http://localhost:3000

# Configuration Cloudinary (pour les médias)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Configuration IPFS (au moins un provider)
# Option 1: endpoint RPC Kubo/Helia compatible
# IPFS_API_URL=https://ipfs.my-provider.example
# IPFS_API_TOKEN=...

# Option 2: Infura IPFS
# IPFS_PROJECT_ID=...
# IPFS_PROJECT_SECRET=...

# Configuration Blockchain EVM (Vyper Registry)
EVM_RPC_URL=https://sepolia.base.org
EVM_CHAIN_ID=84532
EVM_NETWORK=base-sepolia
EVM_EXPLORER_URL=https://sepolia.basescan.org
EVM_RELAYER_PRIVATE_KEY=your-evm-relayer-private-key
EVM_REGISTRY_CONTRACT=0xYourCulturalRegistryAddress

# Optionnel: adresse par défaut pour enregistrer les récompenses
DEFAULT_REWARD_ADDRESS=0x0000000000000000000000000000000000000000
