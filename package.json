  "bugs": {
    "url": "https://github.com/your-username/nkwa-vault/issues"
  },
  "homepage": "https://github.com/your-username/nkwa-vault#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
