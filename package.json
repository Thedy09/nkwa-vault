{
  "name": "nkwa-vault",
  "version": "1.0.0",
  "description": "Plateforme de pr√©servation du patrimoine culturel africain",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "test": "cd backend && npm test && cd ../frontend && npm test",
    "lint": "cd backend && npm run lint && cd ../frontend && npm run lint",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "setup": "npm run install:all && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/nkwa-vault.git"
  },
  "keywords": [
    "african-culture",
    "heritage",
    "preservation",
    "education",
    "react",
    "nodejs",
    "mongodb",
    "pwa"
  ],
