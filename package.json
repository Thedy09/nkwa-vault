{
  "name": "nkwa-v",
  "version": "1.0.0",
  "description": "Plateforme de prÃ©servation et de partage du patrimoine culturel africain",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "test": "cd backend && npm test && cd ../frontend && npm test",
    "lint": "cd backend && npm run lint && cd ../frontend && npm run lint",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "setup": "npm run install:all && npm run build",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:generate": "cd backend && npx prisma generate",
    "db:reset": "cd backend && npx prisma migrate reset",
    "db:studio": "cd backend && npx prisma studio",
    "postinstall": "cd backend && npx prisma generate"
  },
  "keywords": [
    "culture",
    "africa",
    "heritage",
    "patrimoine",
    "conte",
    "proverbe",
    "musique",
    "art",
    "blockchain",
    "nft",
    "pwa",
    "react",
    "nodejs"
  ],
  "author": "Nkwa V Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nkwa-v/nkwa-v.git"
  },
  "bugs": {
    "url": "https://github.com/nkwa-v/nkwa-v/issues"
  },
  "homepage": "https://nkwa.africa",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}