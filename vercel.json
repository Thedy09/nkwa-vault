{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/server.js"
    },
    {
      "src": "/auth(.*)",
      "dest": "/backend/src/server.js"
    },
    {
      "src": "/upload(.*)",
      "dest": "/backend/src/server.js"
    },
    {
      "src": "/riddles(.*)",
      "dest": "/backend/src/server.js"
    },
    {
      "src": "/cultural-content(.*)",
      "dest": "/backend/src/server.js"
    },
    {
      "src": "/health",
      "dest": "/backend/src/server.js"
    },
    {
      "src": "/api-docs(.*)",
      "dest": "/backend/src/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/(favicon\\.ico|manifest\\.json|logo192\\.png|logo512\\.png|robots\\.txt|asset-manifest\\.json)",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend"
    }
  ]
}
